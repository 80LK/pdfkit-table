{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/test/**/*"
  ]
}
